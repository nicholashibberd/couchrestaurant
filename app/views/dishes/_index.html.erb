<li class="sortable_item">
		<%= hidden_field_tag "menu[dishes][][css_id]", dish.css_id %>
		<div>
			<%= hidden_field_tag "menu[dishes][][name]", dish.name %>		
			<%= dish.name %>
		</div>	
		<div>
			<%= hidden_field_tag "menu[dishes][][description]", dish.description %>
			<%= dish.description %>
		</div>	
		<% dish.price_points.each do |price_point| %>
			<div>	
				<%= hidden_field_tag "menu[dishes][][price_points][][price]", price_point.price %>
				<%= price_point.price %>
			</div>
			<div>	
			<%= hidden_field_tag "menu[dishes][][price_points][][description]", price_point.description %>
			<%= price_point.description %>
			</div>
			<div>
			<%= hidden_field_tag "menu[dishes][][price_points][][supplement]", price_point.supplement %>
			<%= price_point.supplement %>
			</div>
			<div>
			<%= hidden_field_tag "menu[dishes][][price_points][][supplement_description]", price_point.supplement_description %>
			<%= price_point.supplement_description %>
			</div>
		<% end %>
		<div>
			<%= link_to 'Edit', :controller => 'dishes', :action => 'edit', :menu_id => request[:id], :id => index %>
		</div>
		<div>
			<span class="delete_button"><%= submit_tag 'Delete', :name => "delete[#{index}]" %></span>
		</div>
</li>