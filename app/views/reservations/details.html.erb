<div>
	You are booking to visit on <%= @date %>, at <%= @time %> for <%= @group_size %> people
</div>
<div>
	<%= form_for(@reservation) do |f| %>
	<%= f.hidden_field :site, :value => @site.domain %>
	<%= f.hidden_field :date, :value => @date %>
	<%= f.hidden_field :time, :value => new_datetime(@date, @time) %>
	<%= f.hidden_field :group_size, :value => @group_size %>
	<div class="field">
		<div class="reservation_label">
			<%= f.label :Your_name %>
		</div>
		<%= f.text_field :name %><br />  
	</div>
	<div class="field">
		<div class="reservation_label">
			<%= f.label :Email_address %>
		</div>
		<%= f.text_field :email %><br />  
	</div>
	<div class="field">
		<div class="reservation_label">
			<%= f.label :Phone_number %>
		</div>
		<%= f.text_field :phone %><br />  
	</div>
	<div class="actions">
		<%= f.submit "Submit reservation" %>
	</div>
	<% end %>

</div>