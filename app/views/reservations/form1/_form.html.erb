<div class="reservation_form <%= request[:id] %>_reservation_form" id="<%= unit.css_id %>">
	<%= form_for(@reservation) do |f| %>
	<%= hidden_field_tag :page_id, request[:id] %>
	<%= f.hidden_field :site, :value => @site.domain %>
	<div class="field">
		<div class="reservation_label">
			<%= f.label :Your_name %>
		</div>
		<%= f.text_field :name %><br />  
	</div>
	<div class="field">
		<div class="reservation_label">
			<%= f.label :Email_address %>
		</div>
		<%= f.text_field :email %><br />  
	</div>
	<div class="field">
		<div class="reservation_label">
			<%= f.label :Phone_number %>
		</div>
		<%= f.text_field :phone %><br />  
	</div>
	<div class="field">
		<div class="reservation_label">
			<%= f.label :Date_you_would_like_to_visit %>
		</div>
		<%= f.text_field :date, :id => 'datepicker' %><br />  
	</div>
	<div class="field">
		<div class="reservation_label">
			<%= f.label :Number_of_people %><br />
		</div>
		<%= f.text_field :number_of_people, :value => params[:number_of_people] %><br />  
	</div><br />

	<div class="actions">
		<%= f.submit "Submit reservation" %>
	</div>
	<% end %>

</div>