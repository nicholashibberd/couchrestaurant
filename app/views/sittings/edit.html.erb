<%= form_tag update_sitting_path do %>
	<%= hidden_field_tag 'sitting[slug]', @sitting.slug %>
	<div>
		<%= label_tag :name %>
		<%= text_field_tag 'sitting[name]', @sitting.name %>
	</div>
	<div>
		<%= label_tag :from %>
		<%= select_tag 'sitting[from]', options_for_select(Site::TIMESLOTS, @sitting.from) %>
	</div>
	<div>
		<%= label_tag :to %>
		<%= select_tag 'sitting[to]', options_for_select(Site::TIMESLOTS, @sitting.to) %>
	</div>
	<div>
		<%= label_tag :increment %>
		<%= select_tag 'sitting[increment]', options_for_select(Site::INCREMENTS, @sitting.increment) %>
	</div>
	<div>
		<%= label_tag :capacity %>
		<%= text_field_tag 'sitting[capacity]', @sitting.capacity %>
	</div>
	<div>
		<%= submit_tag 'Submit' %>
	</div>
<% end %>