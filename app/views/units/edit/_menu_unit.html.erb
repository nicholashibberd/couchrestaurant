<%= form_tag update_unit_page_unit_path do %>
		<%= hidden_field_tag "unit[content_type]", unit.content_type %>
		<%= hidden_field_tag "unit[css_id]", unit.css_id %>			
	<div>
		<%= label_tag :name %><br />
		<%= text_field_tag "unit[name]", unit.name %>
	</div>
	<div>
		<%= label_tag :description %><br />
		<%= text_field_tag "unit[description]", unit.description %>
	</div>
	<div>
		<%= label_tag :dishes %><br />
			<% @unit.dishes.each_with_index do |dish, index| %>
			  <div class="dish">
				<%= label_tag :name %><br />
				<%= text_field_tag "unit[dishes][][name]", dish.name %><br />
				<%= label_tag :description %><br />
				<%= text_field_tag "unit[dishes][][description]", dish.description %><br />
				<%= label_tag :price %><br />
				<%= text_field_tag "unit[dishes][][price]", dish.price %>
					<div>
						<span class="delete_button"><%= submit_tag 'Delete', :name => "delete[#{index}]" %></span>
					</div>
				</div>
			<% end %>
	</div>
	<%= submit_tag 'Add dish' %>
	<%= submit_tag 'Submit' %>
<% end %>
