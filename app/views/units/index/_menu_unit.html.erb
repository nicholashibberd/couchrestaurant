<li class="sortable_item">
			<%= hidden_field_tag "page[units][][content_type]", unit[0].content_type %>
			<%= hidden_field_tag "page[units][][css_id]", unit[0].css_id %>			
			<%= hidden_field_tag "page[units][][name]", unit[0].name %>
			<%= hidden_field_tag "page[units][][description]", unit[0].description %>
			<div>
			<%= unit[0].name %>
			</div>
			<div>
			<%= unit[0].description %>
			</div>
		<div>
				<% unit[0].dishes.each do |dish| %>
				  <div class="dish">
					<%= hidden_field_tag "page[units][][dishes][][name]", dish.name %><br />
					<%= dish.name %>
					<%= hidden_field_tag "page[units][][dishes][][description]", dish.description %><br />
					<%= dish.description %>
					<%= hidden_field_tag "page[units][][dishes][][price]", dish.price %>
					<%= dish.price %>
					</div>
				<% end %>
		</div>
		<div>
			<%= link_to 'Edit', :controller => 'units', :action => 'edit', :page_id => request[:id], :id => unit[1] %>
		</div>
		<div>
			<span class="delete_button"><%= submit_tag 'Delete', :name => "delete[#{unit[1]}]" %></span>
		</div>
</li>
