<li class="sortable_item">
		<%= hidden_field_tag "page[units][][content_type]", unit.content_type %>
		<%= hidden_field_tag "page[units][][css_id]", unit.css_id %>			
		<div>
		<%= hidden_field_tag "page[units][][review]", unit.review %>
		<%= unit.review.html_safe %>
		</div>
		<div>
		<%= hidden_field_tag "page[units][][name]", unit.name %>
		<%= unit.name %>
		</div>
		<div>
			<%= link_to 'Edit', :controller => 'units', :action => 'edit', :page_id => request[:id], :id => index %>
		</div>
		<div>
			<span class="delete_button"><%= submit_tag 'Delete', :name => "delete[#{index}]" %></span>
		</div>
</li>